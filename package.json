{
  "name": "promisify-file-reader",
  "version": "3.0.0",
  "description": "Promise File Reader.",
  "main": "lib/index.js",
  "module": "lib/index.min.mjs",
  "unpkg": "lib/index.min.js",
  "jsdelivr": "lib/index.min.js",
  "browser": "lib/index.min.js",
  "keywords": ["promise", "file", "fileReader"],
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "scripts": {
    "update-dependencies": "yarn upgrade-interactive --latest",
    "dev": "rollup --config --watch",
    "prettier": "prettier **/*.{js,json,yml,md} --write",
    "lint": "eslint src/*.js --fix",
    "clean": "rimraf lib",
    "build": "npm-run-all lint build:*",
    "build:js": "rollup --config",
    "dist": "npm-run-all dist:*",
    "dist:npm": "np --no-yarn --yolo",
    "release": "npm-run-all -s clean build test dist",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test": "jest"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": "fisker/promise-file-reader",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^24.5.0",
    "babel-preset-minify": "^0.5.0",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.15.3",
    "eslint-config-fisker": "^4.3.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jsdom": "^14.0.0",
    "lint-staged": "^8.1.5",
    "markdownlint-cli": "^0.14.1",
    "np": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "regenerator-runtime": "^0.13.2",
    "rollup": "^1.7.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-prettier": "^0.6.0",
    "rollup-plugin-terser": "^4.0.4",
    "uglify-js": "^3.5.2"
  },
  "files": ["lib"],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  }
}
