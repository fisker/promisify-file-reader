{
  "name": "promisify-file-reader",
  "version": "3.0.5",
  "description": "Promise File Reader",
  "keywords": [
    "file",
    "fileReader",
    "promise"
  ],
  "repository": "fisker/promise-file-reader",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "dist/index.common.js",
  "jsdelivr": "dist/index.min.js",
  "unpkg": "dist/index.min.js",
  "module": "dist/index.min.mjs",
  "browser": "dist/index.min.js",
  "scripts": {
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dev": "rollup --config --watch",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s lint clean build test format dist",
    "test": "jest",
    "test-coverage": "jest --coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "7.7.5",
    "@babel/core": "7.7.5",
    "@babel/preset-env": "7.7.6",
    "@commitlint/cli": "8.2.0",
    "@fisker/commitlint-config": "1.1.4",
    "@fisker/eslint-config": "1.5.4",
    "@fisker/eslint-config-jest": "1.2.1",
    "@fisker/husky-config": "1.1.5",
    "@fisker/lint-staged-config": "1.0.8",
    "@fisker/prettier-config": "1.0.24",
    "babel-jest": "24.9.0",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "cz-conventional-changelog": "3.0.2",
    "del-cli": "3.0.0",
    "eslint": "6.7.2",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "jest-environment-jsdom-fifteen": "1.0.2",
    "jsdom": "15.2.1",
    "lint-staged": "9.5.0",
    "markdownlint-cli": "0.19.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "rollup": "1.27.12",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-filesize": "6.2.1",
    "rollup-plugin-prettier": "0.6.0",
    "rollup-plugin-terser": "5.1.3",
    "sort-package-json": "1.31.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
